<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
          fx:controller="edu.gmu.cs321.PetitionDetailController">
    <content>
        <VBox spacing="15" style="-fx-padding: 20;">
            <Label text="Petition Details" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            
            <!-- Petition Summary Section -->
            <GridPane hgap="10" vgap="5">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="150" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>
                
                <Label text="Petition ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <Label fx:id="lblPetitionID" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                
                <Label text="Submission Date:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <Label fx:id="lblSubmissionDate" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                
                <Label text="Status:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <Label fx:id="lblStatus" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            </GridPane>
            
            <!-- Immigrant Information Section -->
            <TitledPane text="Immigrant Information" expanded="true">
                <GridPane hgap="10" vgap="5">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="150" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    
                    <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <Label fx:id="lblImmigrantName" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                    
                    <Label text="Date of Birth:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <Label fx:id="lblImmigrantDOB" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                    
                    <Label text="Nationality:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <Label fx:id="lblNationality" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    
                    <Label text="Passport Number:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <Label fx:id="lblPassportNumber" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                </GridPane>
            </TitledPane>
            
            <!-- Dependents Section -->
            <TitledPane text="Dependents" expanded="true">
                <VBox fx:id="dependentsContainer" spacing="10" />
            </TitledPane>
            
            <!-- Review Section -->
            <TitledPane text="Review" expanded="true">
                <VBox spacing="10">
                    <Label text="Comments:" />
                    <TextArea fx:id="txtComments" prefHeight="100" />
                    
                    <HBox spacing="20" style="-fx-padding: 10 0 0 0;">
                        <Label text="Decision:" />
                        <RadioButton fx:id="radApprove" text="Approve" />
                        <RadioButton fx:id="radReject" text="Reject" />
                    </HBox>
                    
                    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                        <Button fx:id="btnSubmitDecision" text="Submit Decision" />
                        <Button fx:id="btnClose" text="Close" />
                    </HBox>
                </VBox>
            </TitledPane>
        </VBox>
    </content>
</ScrollPane>