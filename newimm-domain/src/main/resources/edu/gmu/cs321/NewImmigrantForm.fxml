<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
          fx:controller="edu.gmu.cs321.NewImmigrantFormController">
    <content>
        <VBox spacing="15" style="-fx-padding: 20;">
            <Label text="New Immigrant Petition Form" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            
            <!-- Immigrant Information Section -->
            <TitledPane text="Immigrant Information" expanded="true">
                <VBox spacing="10">
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="100" />
                            <ColumnConstraints hgrow="ALWAYS" />
                        </columnConstraints>
                        
                        <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <TextField fx:id="txtFirstName" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                        
                        <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <TextField fx:id="txtLastName" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                        
                        <Label text="Date of Birth:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        
                        <!-- Improved Date of Birth Input -->
                        <VBox spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="1">
                            <HBox spacing="10">
                                <!-- Month dropdown -->
                                <ComboBox fx:id="comboMonth" promptText="Month" prefWidth="100">
                                    <tooltip>
                                        <Tooltip text="Select month" />
                                    </tooltip>
                                </ComboBox>
                                
                                <!-- Day dropdown -->
                                <ComboBox fx:id="comboDay" promptText="Day" prefWidth="80">
                                    <tooltip>
                                        <Tooltip text="Select day" />
                                    </tooltip>
                                </ComboBox>
                                
                                <!-- Year dropdown -->
                                <ComboBox fx:id="comboYear" promptText="Year" prefWidth="100">
                                    <tooltip>
                                        <Tooltip text="Select year" />
                                    </tooltip>
                                </ComboBox>
                            </HBox>
                            
                            <!-- Format hint -->
                            <Label text="Format: Month/Day/Year" style="-fx-font-size: 11; -fx-text-fill: #666666;" />
                            
                            <!-- Hidden DatePicker for internal use -->
                            <DatePicker fx:id="datePickerDOB" visible="false" managed="false" />
                        </VBox>
                        
                        <Label text="Nationality:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                        <TextField fx:id="txtNationality" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                        
                        <Label text="Passport Number:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                        <HBox spacing="5" GridPane.rowIndex="4" GridPane.columnIndex="1">
                            <TextField fx:id="txtPassportNumber" HBox.hgrow="ALWAYS" />
                            <Label text="Format: Letter followed by 7 digits (e.g., A1234567)" 
                                   style="-fx-font-size: 11; -fx-text-fill: #666666; -fx-padding: 5 0 0 0;" />
                        </HBox>
                    </GridPane>
                </VBox>
            </TitledPane>
            
            <!-- Dependents Section -->
            <TitledPane text="Dependents" expanded="true">
                <VBox spacing="10">
                    <VBox fx:id="dependentsContainer" spacing="15" />
                    <Button fx:id="btnAddDependent" text="Add Dependent" />
                </VBox>
            </TitledPane>
            
            <VBox spacing="10" alignment="CENTER">
                <Button fx:id="btnSubmit" text="Review Petition" style="-fx-font-size: 14;" />
                <Label fx:id="lblStatus" wrapText="true" />
            </VBox>
        </VBox>
    </content>
</ScrollPane>