<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
          fx:controller="edu.gmu.cs321.NewImmigrantFormController">
    <content>
        <VBox spacing="15" style="-fx-padding: 20;">
            <Label text="New Immigrant Petition Form" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            
            <!-- Immigrant Information Section -->
            <TitledPane text="Immigrant Information" expanded="true">
                <VBox spacing="10">
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="100" />
                            <ColumnConstraints hgrow="ALWAYS" />
                        </columnConstraints>
                        
                        <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <TextField fx:id="txtFirstName" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                        
                        <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <TextField fx:id="txtLastName" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                        
                        <Label text="Date of Birth:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <DatePicker fx:id="datePickerDOB" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                        
                        <Label text="Nationality:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                        <TextField fx:id="txtNationality" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                        
                        <Label text="Passport Number:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                        <TextField fx:id="txtPassportNumber" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                    </GridPane>
                </VBox>
            </TitledPane>
            
            <!-- Dependents Section -->
            <TitledPane text="Dependents" expanded="true">
                <VBox spacing="10">
                    <VBox fx:id="dependentsContainer" spacing="15" />
                    <Button fx:id="btnAddDependent" text="Add Dependent" />
                </VBox>
            </TitledPane>
            
            <!-- Submit Section -->
            <VBox spacing="10" alignment="CENTER">
                <Button fx:id="btnSubmit" text="Submit Petition" style="-fx-font-size: 14;" />
                <Label fx:id="lblStatus" wrapText="true" />
            </VBox>
        </VBox>
    </content>
</ScrollPane>